 <!-- Just trying the power of Rails -->
 <!-- Fuck annoying ul->li->a -->

<% links = [
    [ 'Feed', user_path(current_user) ],
    [ 'Questions', questions_path ],
    [ 'Profile', edit_user_path(current_user) ],
    [ 'Log out', logout_path ]
] %>

<% ulClasses = type == :mobile ? "clear-ul  main-menu  main-menu__mobile" : "clear-ul  main-menu" %>

<%= content_tag(:ul, :class => ulClasses) do %>
  <% links.each do |link| %>
    <%= tag.li do %>
      <%= link_to "#{link.first}", "#{link.last}" %>
    <% end %>
  <% end %>
<% end %>

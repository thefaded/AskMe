<section class="user-login">
  <div class="user-login__sub-title">Changing profile information</div>
  <div class="login-form">
    <%= form_for @user do |f| %>
      <%= render partial: 'users/user_flash' %>
      <div class="login-form__block">
        <div class="login-form__block--left">
          <%= f.label :email %>
        </div>
        <%= f.text_field :email, placeholder: "Email", class: "login-form__input" %>
      </div>
      <div class="login-form__block">
        <div class="login-form__block--left">
          <%= f.label :username %>
        </div>
        <%= f.text_field :username, placeholder: "Username", class: "login-form__input" %>
      </div>
      <div class="login-form__block">
        <div class="login-form__block--left">
          <%= f.label :name %>
        </div>
        <%= f.text_field :name, placeholder: "Name", class: "login-form__input" %>
      </div>
      <div class="login-form__block">
        <div class="login-form__block--left">
          <%= f.label :bg_color, 'Background Color' %>
        </div>
        <%= f.color_field :bg_color, placeholder: "Background Color", class: "login-form__input-color" %>
      </div>
      <div class="login-form__block">
        <div class="login-form__block--left">
          <%= f.label :password %>
        </div>
        <%= f.password_field :password, placeholder: "Password", class: "login-form__input" %>
      </div>
      <div class="login-form__block">
        <div class="login-form__block--left">
          <%= f.label :password_confirmation %>
        </div>
        <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "login-form__input" %>
      </div>
      <div class="login-form__block">
        <%= submit_tag "Update profile", class: "login-form__btn" %>
      </div>
    <% end %>
  </div>
</section>
